{
  "name": "ssr",
  "version": "1.0.0",
  "author": "Sli-7x",
  "license": "ISC",
  "description": "",
  "main": "index.js",
  "repository": "https://github.com/Sli-7x/ssr-react-typescript",
  "scripts": {
    "dev": "export NODE_ENV=dev&& npm run clean && nodemon ./src/server/serverDev.ts",
    "prebuild": "rimraf dist && mkdir dist",
    "build:client":
      "export NODE_ENV=production&& export BABEL_ENV=production&& npm run prebuild && webpack --config webpack.config.js",
    "build:server":
      "export NODE_ENV=server&& npm run tslint && rimraf server.min.js && webpack --config webpack.config.js",
    "start": "export NODE_ENV=production&& nodemon ./src/server/server.ts",
    "clean": "rimraf dist && mkdir dist",
    "tslint": "tslint -c ./tslint.json -p ./tsconfig.json -t stylish",
    "test": "export NODE_ENV=test&& jest --watch --no-cache",
    "test:coverage": "export NODE_ENV=test&& jest --coverage"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cookie-parser": "^1.4.3",
    "helmet": "^3.12.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-lazyload": "^2.3.0",
    "react-loadable": "^5.3.1",
    "react-redux": "5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "4.2.2",
    "redux": "3.7.2",
    "redux-thunk": "2.2.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^4.0.2",
    "@types/enzyme": "^3.1.9",
    "@types/express": "^4.11.1",
    "@types/helmet": "0.0.37",
    "@types/ignore-styles": "^5.0.0",
    "@types/jest": "^22.2.0",
    "@types/lru-cache": "^4.1.0",
    "@types/node": "^9.4.7",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/react-helmet": "^5.0.5",
    "@types/react-loadable": "^5.3.3",
    "@types/react-redux": "^5.0.15",
    "@types/react-router": "^4.0.23",
    "@types/react-router-config": "^1.0.6",
    "@types/react-router-dom": "^4.2.5",
    "@types/react-test-renderer": "^16.0.1",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "@types/serialize-javascript": "^1.3.2",
    "@types/webpack": "^4.1.1",
    "@types/webpack-dev-middleware": "^2.0.1",
    "@types/webpack-hot-middleware": "^2.16.3",
    "@types/webpack-node-externals": "^1.6.3",
    "awesome-typescript-loader": "^5.0.0-1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "compression": "^1.7.2",
    "copy-webpack-plugin": "^4.5.1",
    "dotenv": "^5.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "^4.16.3",
    "file-loader": "^1.1.11",
    "jest": "^22.4.2",
    "jest-styled-components": "^5.0.0",
    "lru-cache": "^4.1.2",
    "node-sass": "^4.7.2",
    "nodemon": "^1.17.2",
    "raf": "^3.4.0",
    "react-helmet": "^5.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-test-renderer": "^16.2.0",
    "serialize-javascript": "^1.4.0",
    "style-loader": "^0.20.3",
    "styled-components": "^3.2.3",
    "ts-jest": "^22.4.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12",
    "webpack-dev-middleware": "^3.0.1",
    "webpack-hot-middleware": "^2.21.2",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": ["**/tests/*.spec.(ts|tsx|js)"],
    "setupFiles": ["<rootDir>config/jest/bootstrap.js"],
    "collectCoverageFrom": [
      "src/client/**/*.tsx",
      "!src/client/index.tsx",
      "!src/client/routes.tsx",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "collectCoverage": true,
    "bail": true,
    "moduleNameMapper": {
      "^.+\\.s?css$": "identity-obj-proxy"
    },
    "coverageDirectory": "./coverage/"
  }
}
